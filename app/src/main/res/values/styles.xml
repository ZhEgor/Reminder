<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextViewCreateWord">
        <item name="android:layout_marginHorizontal">@dimen/normal_100 </item>
        <item name="android:layout_marginTop">@dimen/normal_100 </item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="EditTextCreateWord">
        <item name="android:layout_marginHorizontal">@dimen/normal_100 </item>
        <item name="android:paddingVertical">@dimen/normal_100 </item>
        <item name="android:background">@color/white_0</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">textPersonName</item>
    </style>

    <style name="ButtonDefault" >
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/brown_light_35</item>
    </style>
    <style name="Widget.Reminder.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="Widget.Reminder.AppWidget.InnerView" parent="android:Widget">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

</resources>